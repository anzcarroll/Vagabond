<div class="post_show">
  <h1>Edit Post</h1>
  <%= form_for @post, url: city_post_path do |f| %>
    <%= f.label :title, 'Title:' %>
    </br>
    <%= f.text_field :title %>
    </br>
    </br>
     <%= f.label :description, 'Description:'  %>
     </br>
    <%= f.text_area :description, size: "50x5" %>
    </br>
    <%= f.submit "Update #{@post.title}!", class: "btn btn-large btn-primary"%>
  <% end %>
</div>

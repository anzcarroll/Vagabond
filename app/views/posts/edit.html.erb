<h2>Edit Post</h2>
<%= form_for @post, url: city_post_path do |f| %>
  <%= f.label :title, 'Title:' %>
  </br>
  <%= f.text_field :title %>
  </br>
  </br>
   <%= f.label :description, 'Description:'  %>
   </br>
  <%= f.text_area :description, size: "50x10" %>
  </br>
  <%= f.submit "Update #{@post.title}!", class: "btn btn-primary"%>
<% end %>

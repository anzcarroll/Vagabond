<h2>Create Post</h2>
<%= form_for @post, url: city_posts_path do |f| %>
  </br>
  <%= f.label :title, 'Title:' %>
  </br>
  <%= f.text_field :title %>
  </br>
  </br>
  <%= f.label :description, 'Description:' %>
  </br>
  <%= f.text_area :description, size: "50x10" %>
  </br>
  <%= f.submit 'Add a post!'%>
<% end %>
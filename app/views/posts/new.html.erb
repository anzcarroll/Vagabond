<div class="post_show">
  <h1>Create Post</h1>
  <%= form_for @post, url: city_posts_path do |f| %>
    <%= f.label :title, 'Title:' %>
    </br>
    <%= f.text_field :title %>
    </br>
    </br>
    <%= f.label :description, 'Description:' %>
    </br>
    <%= f.text_area :description, size: "50x5" %>
    </br>
    <%= f.submit 'Add a post!', class: "btn btn-large btn-primary"%>
  <% end %>
</div>
